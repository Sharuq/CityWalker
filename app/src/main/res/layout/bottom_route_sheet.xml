<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/topDrawer"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/toup" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:weightSum="3">


        <ImageView
            android:id="@+id/walkingImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.2"
            android:src="@mipmap/walking" />

        <TextView
            android:id="@+id/timeValue"
            android:layout_width="0dp"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="9 min"></TextView>

        <TextView
            android:id="@+id/distanceValue"
            android:layout_width="0dp"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="(500m)"></TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"

        android:layout_marginTop="10dp"
        android:weightSum="3">


        <ImageView
            android:id="@+id/policeImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0.2"
            android:src="@mipmap/police_small" />

        <TextView
            android:layout_width="0dp"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Police Stations"></TextView>

        <TextView
            android:id="@+id/stationCount"
            android:layout_width="0dp"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="2"></TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:weightSum="3">


        <ImageView
            android:id="@+id/cctvImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0.2"
            android:src="@mipmap/cctv_small" />

        <TextView
            android:layout_width="0dp"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Safe Cameras"></TextView>

        <TextView
            android:id="@+id/cctvCount"
            android:layout_width="0dp"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="10"></TextView>
    </LinearLayout>


</LinearLayout>